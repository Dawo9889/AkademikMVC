@model Akademik.Domain.Entities.Resident

<h2>Resident Details</h2>

<div>
    <h4>@Model.FirstName @Model.LastName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PESEL)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PESEL)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ResidentDetails.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ResidentDetails.Email)
        </dd>
    </dl>
    @if (Model.ResidentDetails.Photo != null)
    {
        <img src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.ResidentDetails.Photo))" alt="Resident Photo" />
    }
    else
    {
        <p>No photo available</p>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
