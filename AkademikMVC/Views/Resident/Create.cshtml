@model Akademik.Domain.Entities.Resident
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Create Resident</h2>
<form asp-controller="Resident" asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group p-2 row">
        <label asp-for="PESEL" class="form-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="PESEL" class="form-control" />
            <span asp-validation-for="PESEL" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group p-2 row">
        <label asp-for="FirstName" class="form-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group p-2 row">
        <label asp-for="LastName" class="form-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>

    <h3>Resident Details</h3>

    <div class="row">
        <div class="col-md-6 form-group p-2">
            <label asp-for="ResidentDetails.Email" class="form-label"></label>
            <input asp-for="ResidentDetails.Email" class="form-control" />
            <span asp-validation-for="ResidentDetails.Email" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-group p-2">
            <label asp-for="ResidentDetails.StudentCardNumber" class="form-label"></label>
            <input asp-for="ResidentDetails.StudentCardNumber" class="form-control" />
            <span asp-validation-for="ResidentDetails.StudentCardNumber" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 form-group p-2">
            <label asp-for="ResidentDetails.City" class="form-label"></label>
            <input asp-for="ResidentDetails.City" class="form-control" />
            <span asp-validation-for="ResidentDetails.City" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group p-2">
            <label asp-for="ResidentDetails.Country" class="form-label"></label>
            <input asp-for="ResidentDetails.Country" class="form-control" />
            <span asp-validation-for="ResidentDetails.Country" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group p-2">
            <label asp-for="ResidentDetails.PostalCode" class="form-label"></label>
            <input asp-for="ResidentDetails.PostalCode" class="form-control" />
            <span asp-validation-for="ResidentDetails.PostalCode" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 form-group p-2">
            <label asp-for="ResidentDetails.Street" class="form-label"></label>
            <input asp-for="ResidentDetails.Street" class="form-control" />
            <span asp-validation-for="ResidentDetails.Street" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-group p-2">
            <label asp-for="ResidentDetails.PhoneNumber" class="form-label"></label>
            <input asp-for="ResidentDetails.PhoneNumber" class="form-control" />
            <span asp-validation-for="ResidentDetails.PhoneNumber" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group p-2 row">
        <label asp-for="ResidentDetails.PhotoData" for="formFile" class="form-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="ResidentDetails.PhotoData" class="form-control" type="file" id="formFile">
        </div>
    </div>


    <h3>Room Assignment</h3>
    <div class="form-group p-2 row">
        <label asp-for="RoomId" class="form-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="RoomId" class="form-control" />
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Create Resident</button>
</form>





<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
