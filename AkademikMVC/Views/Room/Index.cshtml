@model IEnumerable<Akademik.Application.DTO.RoomDTO.FewRoomInfoAndFewResidentinfoDTO>

@{
    ViewData["Title"] = "Car Workshops";
}
<h2>Rooms</h2>
<p>
    <a asp-action="Create" class="btn btn-secondary">Create New Room</a>
</p>
<div class="row">
    @foreach (var room in Model)
    {
        <div class="col-md-4">
            <div class="card m-3 border" style="width: 18rem;">
                <div class="card-body">
                    <h3>Room number: @room.RoomNumber</h3>
                    <p>Count of beds: @room.NumberOfBeds</p>
                    <p>Available? @(room.IsAvailable ? "Yes" : "No")</p>
                    @if (room.Residents.Any())
                    {
                        <h4>Residents:</h4>
                        <ul>
                            @foreach (var resident in room.Residents)
                            {
                                <li><a class="btn btn-secondary mt-2" asp-action="Details" asp-controller="Resident" asp-route-id="@resident.Id">@resident.FirstName @resident.LastName</a></li>
                            }
                        </ul>
                        <p>
                            <a class="btn btn-dark mt-2" disabled>Delete</a>
                            <a asp-action="Edit" asp-route-roomNumber="@room.RoomNumber" class="btn btn-outline-warning mt-2">Edit Room</a>
                        </p>
                    }
                    else
                    {
                        <p>
                            <a asp-action="Delete" asp-route-roomNumber="@room.RoomNumber" class="btn btn-danger mt-2">Delete</a>
                            <a asp-action="Edit" asp-route-roomNumber="@room.RoomNumber" class="btn btn-outline-warning mt-2">Edit Room</a>
                        </p>
                    }
                </div>
            </div>
        </div>
    }
</div>

