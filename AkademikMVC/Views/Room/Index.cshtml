@model IEnumerable<Akademik.Application.DTO.RoomDTO.FewRoomInfoAndFewResidentinfoDTO>

@{
    ViewData["Title"] = "Rooms";
}

<h2>Rooms</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Room</a>
</p>
<form asp-controller="Room" asp-action="Details" method="get">
    <div class="input-group mb-3">
        <input type="number" class="form-control" placeholder="Search by room number..." name="roomNumber">
        <button class="btn btn-dark" type="submit">Search</button>
    </div>
</form>
<div class="row">
    @foreach (var room in Model)
    {
        <div class="col-md-4">
            <div class="card m-3 border d-flex flex-column" style="min-height: 390px;">
                <div class="card-body flex-grow-1">
                    <h3>Room number: @room.RoomNumber</h3>
                    <p>Count of beds: @room.NumberOfBeds</p>
                    <p>Available? @(room.IsAvailable ? "Yes" : "No")</p>
                    @if (room.Residents.Any())
                    {
                        <h4>Residents:</h4>
                        <ul>
                            @foreach (var resident in room.Residents)
                            {
                                <li class="list-group-item mt-2"><a class="text-dark" asp-action="Details" asp-controller="Resident" asp-route-id="@resident.Id">@resident.FirstName @resident.LastName</a></li>
                            }
                        </ul>
                        <p>
                            <a class="btn btn-outline-dark mt-2" onclick="showDeleteAlert()" disabled>Delete</a>
                            <a asp-action="Edit" asp-route-roomNumber="@room.RoomNumber" class="btn btn-outline-primary mt-2">Edit Room</a>
                        </p>
                    }
                    else
                    {
                        <p>
                            <a asp-action="Delete" asp-route-roomNumber="@room.RoomNumber" class="btn btn-danger mt-2">Delete</a>
                            <a asp-action="Edit" asp-route-roomNumber="@room.RoomNumber" class="btn btn-outline-primary mt-2">Edit Room</a>
                        </p>
                    }
                </div>
            </div>
        </div>
    }
</div>
<script>
    function showDeleteAlert() {
        alert("Cannot remove a room with residents. Please remove residents before removing");
    }
</script>