@model IEnumerable<Akademik.Application.DTO.RoomDTO.FewRoomInfoAndFewResidentinfoDTO>

@{
    ViewData["Title"] = "Car Workshops";
}
<h2>Pokoje</h2>
<p>
    <a asp-action="Create" class="btn btn-secondary">Create New</a>
</p>
<div class="row">
    @foreach (var room in Model)
    {
        <div class="col-md-4">
            <div class="card m-3" style="width: 18rem;">
                <div class="card-body">
                    <h3>Numer pokoju @room.RoomNumber</h3>
                    <p>Liczba łóżek: @room.NumberOfBeds</p>
                    <p>Dostępny?  @(room.IsAvailable ? "Tak" : "Nie")</p>
                    @if (room.Residents.Any())
                    {
                        <h4>Residents:</h4>
                        <ul>
                            @foreach (var resident in room.Residents)
                            {
                                <li>@resident.FirstName @resident.LastName</li>
                            }
                        </ul>
                    }
                    <p>
                        <a asp-action="Delete" asp-route-roomNumber="@room.RoomNumber" class="btn btn-danger">Delete</a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>
